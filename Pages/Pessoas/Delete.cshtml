@page "{cpf}"
@model CRUDPessoasTeste.Pages.Pessoas.DeleteModel

<h1>Excluir Pessoa</h1>

@if (Model.Pessoa == null)
{
    <p>Pessoa não encontrada.</p>
}
else
{
    <h3>Tem certeza que deseja excluir esta pessoa?</h3>
    <dl class="row">
        <dt class="col-sm-2">CPF</dt>
        <dd class="col-sm-10">@Model.Pessoa.Cpf</dd>

        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Pessoa.Nome</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Pessoa.Email</dd>
    </dl>

    <form method="post">
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
}