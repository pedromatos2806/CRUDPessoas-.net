@page
@model CRUDPessoasTeste.Pages.Pessoas.IndexModel

<h1>Lista de Pessoas</h1>

@if (!string.IsNullOrWhiteSpace(Model.Mensagem))
{
    <div class="alert alert-info">@Model.Mensagem</div>
}

<p>
    <a asp-page="Create" class="btn btn-primary">Nova Pessoa</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>CPF</th>
            <th>RG</th>
            <th>Nome</th>
            <th>Nascimento</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var pessoa in Model.Pessoas)
{
        <tr>
            <td>@pessoa.Cpf</td>
            <td>@pessoa.Rg</td>
            <td>@pessoa.Nome</td>
            <td>@(pessoa.Nascimento.HasValue ? pessoa.Nascimento.Value.ToShortDateString() : "")</td>
            <td>@pessoa.Email</td>
            <td>
                <a asp-page="Edit" asp-route-cpf="@pessoa.Cpf" class="btn btn-sm btn-warning">Editar</a>
                <a asp-page="Delete" asp-route-cpf="@pessoa.Cpf" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>